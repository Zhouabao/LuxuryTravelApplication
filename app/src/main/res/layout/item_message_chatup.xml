<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:layout_marginRight="10dp">

    <com.sdy.luxurytravelapplication.widgets.RoundImageView
        android:id="@+id/accostUserIv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/default_image_15dp"
        app:borderRadius="15dp"
        app:type="round" />

    <View
        android:id="@+id/accostGiftIv"
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:background="@drawable/shape_rectangle_stroke_green_15dp" />

</androidx.constraintlayout.widget.ConstraintLayout>