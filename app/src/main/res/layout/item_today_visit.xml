<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:background="@color/colorWhite">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/visitImg"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/default_avator_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/visitName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textColor="#ff333333"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@id/visitImg"
        app:layout_constraintTop_toTopOf="@id/visitImg"
        tools:text="用户名最大长" />


    <ImageView
        android:id="@+id/visitVip"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/icon_vip"
        app:layout_constraintBottom_toBottomOf="@id/visitName"
        app:layout_constraintLeft_toRightOf="@id/visitName"
        app:layout_constraintTop_toTopOf="@id/visitName" />


    <TextView
        android:id="@+id/visitInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="#ff9b9b9b"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@id/visitName"
        app:layout_constraintTop_toBottomOf="@id/visitName"
        tools:text="22 / 女 / 巨蟹座 / 18.85km" />

    <View
        android:id="@+id/visitHideName"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:background="@drawable/shape_gray0_3dp"
        app:layout_constraintBottom_toBottomOf="@id/visitName"
        app:layout_constraintLeft_toLeftOf="@id/visitName"
        app:layout_constraintRight_toRightOf="@id/visitVip"
        app:layout_constraintTop_toTopOf="@id/visitName" />

    <View
        android:id="@+id/visitHideInfo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/shape_gray_e9ecf5_3dp"
        app:layout_constraintBottom_toBottomOf="@id/visitInfo"
        app:layout_constraintLeft_toLeftOf="@id/visitInfo"
        app:layout_constraintRight_toRightOf="@id/visitInfo"
        app:layout_constraintTop_toTopOf="@id/visitInfo" />

    <TextView
        android:id="@+id/count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:text="@string/visit_cnt"
        android:textColor="#ff333333"
        android:textSize="12sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/visitName" />

    <TextView
        android:id="@+id/visitCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:textColor="#FF1ED0A7"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/count"
        tools:text="20次" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#FFEFEFEF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/visitName"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>

