<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="237dp"
    android:layout_height="107dp"
    android:layout_gravity="right"
    android:background="@drawable/shape_rectangle_stroke_eceff4_15dp">


    <TextView
        android:id="@+id/shareDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="我分享给你了一个动态"
        android:textColor="#ff333333"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#FFF6F7F9"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shareDesc" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="@id/shareDesc"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider">

        <ImageView
            android:id="@+id/shareImg"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:background="@drawable/shape_rectangle_ffeaefff_10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/shareTypeMedia"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:visibility="gone"
            android:src="@drawable/icon_play_transparent"
            app:layout_constraintBottom_toBottomOf="@id/shareImg"
            app:layout_constraintLeft_toLeftOf="@id/shareImg"
            app:layout_constraintRight_toRightOf="@id/shareImg"
            app:layout_constraintTop_toTopOf="@id/shareImg" />

        <TextView
            android:id="@+id/shareTypeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="快"
            android:textColor="#ff94aeff"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="@id/shareImg"
            app:layout_constraintLeft_toLeftOf="@id/shareImg"
            app:layout_constraintRight_toRightOf="@id/shareImg"
            app:layout_constraintTop_toTopOf="@id/shareImg" />

        <TextView
            android:id="@+id/shareContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:drawableRight="@drawable/icon_arrow_right"
            android:drawablePadding="10dp"
            android:ellipsize="end"
            android:maxWidth="157dp"
            android:maxLines="2"
            android:text="快乐工作，认真生活"
            android:textColor="#ff333333"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/shareImg"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
