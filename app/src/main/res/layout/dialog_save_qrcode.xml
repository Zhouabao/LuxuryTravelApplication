<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/shape_rectangle_white_15dp"
    android:gravity="center"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/qrCodeIv"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/default_avator_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="@string/focus_sugartown"
        android:textColor="#ffb5b7b9"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/saveAndToWechatBtn"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_rectangle_green_bottom_15dp"
        android:gravity="center"
        android:text="@string/save_and_goto_wechat"
        android:textColor="#ffffffff"
        android:textSize="17sp"
        android:textStyle="bold" />
</LinearLayout>