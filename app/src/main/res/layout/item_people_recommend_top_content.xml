<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="68dp"
    android:layout_height="68dp"
    android:layout_marginLeft="10dp">

    <ImageView
        android:id="@+id/userAvator"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/default_image_15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/userMvBtn"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/shape_cover_right_15dp"
        android:src="@drawable/icon_index_vip"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieMine"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <ImageView
        android:visibility="gone"
        android:id="@+id/selectedMine"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/icon_selected_user"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>