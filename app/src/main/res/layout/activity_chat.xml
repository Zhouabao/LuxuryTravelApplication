<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chatRootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:fitsSystemWindows="true"
    tools:context=".nim.business.session.activity.ChatActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/barCl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:src="@drawable/icon_return_arrow"
            app:layout_constraintBottom_toBottomOf="@id/userInfoCl"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/userInfoCl" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/userInfoCl"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:visibility="invisible"
            app:layout_constraintLeft_toRightOf="@id/backBtn"
            app:layout_constraintRight_toLeftOf="@id/moreBtn"
            app:layout_constraintTop_toTopOf="parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userAvator"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/default_avator_image"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/userAvator"
                app:layout_constraintTop_toTopOf="@id/userAvator">

                <TextView
                    android:id="@+id/userNickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff333333"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="对方ID" />

                <TextView
                    android:id="@+id/userOnlineTime"
                    android:layout_width="62dp"
                    android:layout_height="16dp"
                    android:textColor="#ffc6cad4"
                    android:textSize="11sp"
                    app:layout_constraintLeft_toLeftOf="@id/userNickname"
                    app:layout_constraintTop_toBottomOf="@id/userNickname"
                    tools:text="5分钟前在线" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/expandInfoBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/icon_expand_info"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/cl1"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:id="@+id/videoCallBtn"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/moreBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:src="@drawable/icon_more_black"
            app:layout_constraintBottom_toBottomOf="@id/userInfoCl"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/userInfoCl" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/userInfoDetailCl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/barCl">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userAvator1"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/default_avator_image"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            app:layout_constraintBottom_toBottomOf="@id/userAvator1"
            app:layout_constraintLeft_toRightOf="@id/userAvator1"
            app:layout_constraintTop_toTopOf="@id/userAvator1">

            <TextView
                android:id="@+id/userNickname1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff333333"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="对方ID" />


            <TextView
                android:id="@+id/userOnlineTime1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="#ffc6cad4"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="@id/userNickname1"
                app:layout_constraintLeft_toRightOf="@id/userNickname1"
                app:layout_constraintTop_toTopOf="@id/userNickname1"
                tools:text="5分钟前在线" />

            <TextView
                android:id="@+id/userInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffc6cad4"
                android:textSize="11sp"
                app:layout_constraintLeft_toLeftOf="@id/userNickname1"
                app:layout_constraintTop_toBottomOf="@id/userNickname1"
                tools:text="22/158cm/44kg/学生" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <ImageView
            android:id="@+id/collapseBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            app:layout_constraintBottom_toBottomOf="@id/userAvator1"
            app:layout_constraintLeft_toRightOf="@id/cl2"
            app:layout_constraintTop_toTopOf="@id/userAvator1" />

        <ImageView
            android:id="@+id/videoCallBtn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/cl2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/cl2" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/userPhotosRv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:maxHeight="65dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/userAvator1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFF6F7F9"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userInfoDetailCl" />

    <LinearLayout
        android:id="@+id/verifyNoticeCl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#33E0BD92"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="8dp"
        android:paddingRight="10dp"
        android:paddingBottom="8dp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userInfoDetailCl">

        <TextView
            android:id="@+id/leftReplyCnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/unverify_residue_count"
            android:textColor="#ffe1be92"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/uplevelReplyCnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_rectangle_brown_12dp"
            android:paddingLeft="10dp"
            android:paddingTop="2dp"
            android:paddingRight="10dp"
            android:paddingBottom="2dp"
            android:text="@string/uplevel_cnt"
            android:textColor="#ffffffff"
            android:textSize="11sp" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/messageListRv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fadingEdge="none"
        android:focusable="false"
        android:overScrollMode="ifContentScrolls"
        app:layout_constraintBottom_toTopOf="@id/messageActivityBottomLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/verifyNoticeCl" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/flashCallLikeCl"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:minWidth="303dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/messageActivityBottomLayout"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/likeCloseBtn"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:drawablePadding="10dp"
            android:gravity="center_vertical|right"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="@string/how_about_fall_in_love"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/likeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <include
        layout="@layout/layout_nim_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/sendGiftNotice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:visibility="gone"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="@id/messageActivityBottomLayout"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>