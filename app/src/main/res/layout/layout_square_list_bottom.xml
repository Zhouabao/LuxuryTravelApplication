<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:descendantFocusability="afterDescendants"
    android:paddingTop="12dp">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/squareTitleRv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.ctetin.expandabletextviewlibrary.ExpandableTextView
        android:id="@+id/squareContent1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:ellipsize="end"
        android:lineSpacingMultiplier="1.1"
        android:textColor="@color/color333"
        android:textSize="16sp"
        android:textStyle="bold"
        app:ep_contract_color="@color/colorGrayText"
        app:ep_contract_text="@string/collapse"
        app:ep_expand_color="@color/colorGrayText"
        app:ep_expand_text="@string/expand"
        app:ep_max_line="3"
        app:ep_need_always_showright="false"
        app:ep_need_animation="true"
        app:ep_need_contract="true"
        app:ep_need_expand="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/squareTitleRv"
        tools:text="在蚂蚁金服中后台产品在蚂蚁金服中后台产品在蚂蚁金服中后台产品在蚂蚁金服中后台产品在蚂蚁金服中后台产品在蚂蚁金服中后台产品在蚂蚁金服中后台产品在蚂蚁金服中后台产品在蚂蚁金服中后台产品在蚂蚁金服中后台产品在蚂蚁金服中后台产品在蚂蚁金服中后台产品在蚂蚁金服中后台产品在蚂蚁金服中后台产品在蚂蚁金服中后台产品在蚂蚁金服中后台产品在蚂蚁金服中后台产品在蚂蚁金服中后台产品在蚂蚁金服中后台产品在蚂蚁金服中后台产品" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/squareSweetVerifyContentCl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/icon_find_luxury_bg"
        android:padding="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/squareContent1">

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_find_luxury"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/squareSweetVerifyName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="认证身材 36D"
            android:textColor="#FFFC9010"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/squareSweetVerifyContent"
            app:layout_constraintLeft_toRightOf="@id/iv1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/squareSweetVerifyContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="身材经平台评估具有一定吸引力和用户有一定高端约会意向"
            android:textColor="#FF8A909F"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/squareSweetVerifyName"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/squareSweetVerifyName" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:id="@+id/squareLocationAndTime1Ll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintLeft_toRightOf="@id/squareTagLl"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/squareSweetVerifyContentCl">

        <TextView
            android:id="@+id/squareLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_c7f3e9_13dp"
            android:drawableLeft="@drawable/icon_location"
            android:drawablePadding="2dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingLeft="6dp"
            android:paddingTop="2dp"
            android:paddingRight="6dp"
            android:paddingBottom="2dp"
            android:singleLine="true"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            tools:text="北京市北北京市北" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/squareTagLl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/squareLocationAndTime1Ll"
        app:layout_constraintTop_toBottomOf="@id/squareSweetVerifyContentCl">

        <TextView
            android:id="@+id/squareTagName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_c7f3e9_13dp"
            android:drawableLeft="@drawable/icon_topic_small"
            android:drawablePadding="2dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingLeft="6dp"
            android:paddingTop="2dp"
            android:paddingRight="6dp"
            android:paddingBottom="2dp"
            android:singleLine="true"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            tools:text="玩游戏" />

    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/squareDianzanAni"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginLeft="15dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/squareDianzanBtn1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/squareDianzanBtn1"
        app:lottie_fileName="data_click_zan.json"
        app:lottie_imageAssetsFolder="images/" />

    <TextView
        android:id="@+id/squareDianzanBtn1"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="@color/colorHintEdittext"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@id/squareDianzanAni"
        app:layout_constraintTop_toBottomOf="@id/squareLocationAndTime1Ll"
        tools:text="123" />


    <TextView
        android:id="@+id/squareCommentBtn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="18dp"
        android:drawableLeft="@drawable/icon_comment"
        android:drawablePadding="4dp"
        android:gravity="center"
        android:textColor="@color/colorHintEdittext"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/squareDianzanBtn1"
        app:layout_constraintLeft_toRightOf="@id/squareDianzanBtn1"
        app:layout_constraintTop_toTopOf="@id/squareDianzanBtn1"
        tools:text="123" />


    <TextView
        android:id="@+id/squareZhuanfaBtn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="27dp"
        android:drawablePadding="4dp"
        android:gravity="center_vertical"
        android:textColor="@color/colorHintEdittext"
        android:textSize="15sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/squareDianzanBtn1"
        app:layout_constraintLeft_toRightOf="@id/squareCommentBtn1"
        app:layout_constraintTop_toTopOf="@id/squareDianzanBtn1"
        tools:text="123" />


    <ImageView
        android:id="@+id/squareMoreBtn1"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/icon_more_gray"
        app:layout_constraintBottom_toBottomOf="@id/squareDianzanBtn1"
        app:layout_constraintLeft_toRightOf="@id/squareCommentBtn1"
        app:layout_constraintTop_toTopOf="@id/squareDianzanBtn1" />


</androidx.constraintlayout.widget.ConstraintLayout>