<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTransparent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/shape_rectangle_white_top_15dp">

        <com.sdy.luxurytravelapplication.widgets.RoundImageView
            android:id="@+id/videoCover"
            android:layout_width="125dp"
            android:layout_height="166dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/default_image_15dp"
            app:borderRadius="25dp"
            app:layout_constraintBottom_toTopOf="@id/videoTitle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:type="round" />

        <ImageView
            android:id="@+id/videoPlay"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_play_transparent"
            app:layout_constraintBottom_toBottomOf="@id/videoCover"
            app:layout_constraintLeft_toLeftOf="@id/videoCover"
            app:layout_constraintRight_toRightOf="@id/videoCover"
            app:layout_constraintTop_toTopOf="@id/videoCover" />

        <com.sdy.luxurytravelapplication.widgets.switchplay.EmptyControlVideo
            android:id="@+id/videoStandard"
            android:layout_width="125dp"
            android:layout_height="166dp"
            android:layout_gravity="center"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@id/videoCover"
            app:layout_constraintLeft_toLeftOf="@id/videoCover"
            app:layout_constraintRight_toRightOf="@id/videoCover"
            app:layout_constraintTop_toTopOf="@id/videoCover" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avator"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/default_avator_image"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/videoTitle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/videoTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="@string/video_must_know"
            android:textColor="#FF333333"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/videoTip"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/videoTip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="25dp"
            android:gravity="center"
            android:text="@string/video_tip"
            android:textColor="#FFB6BCC6"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@id/verifyBtn"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/verifyBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/shape_rectangle_green_25dp"
            android:gravity="center"
            android:text="@string/ok_1"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>