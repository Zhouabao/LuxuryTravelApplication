<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    tools:context=".ui.activity.LoginActivity">

    <com.sdy.luxurytravelapplication.widgets.switchplay.EmptyControlVideo
        android:id="@+id/loginMv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/iv1"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="110dp"
        android:src="@drawable/icon_logo_welcome"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="记录美好生活"
        android:textColor="#ffffffff"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv1" />

    <TextView
        android:id="@+id/loginBtn"
        android:layout_width="295dp"
        android:layout_height="62dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/shape_white_31dp"
        android:gravity="center"
        android:text="加入旅游"
        android:textColor="#ff333333"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@id/loginPrivacy"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


    <CheckBox
        android:id="@+id/agreeCb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:button="@drawable/selector_check_blue"
        android:checked="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/loginPrivacy"
        app:layout_constraintRight_toLeftOf="@id/loginPrivacy"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toTopOf="@id/loginPrivacy" />

    <TextView
        android:id="@+id/loginPrivacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="登录即代表同意"
        android:textColor="@color/colorWhite"
        app:layout_constraintLeft_toRightOf="@id/agreeCb"
        android:textSize="10sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        />

</androidx.constraintlayout.widget.ConstraintLayout>