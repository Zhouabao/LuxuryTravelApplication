<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@drawable/shape_rectangle_white_top_15dp"
    android:orientation="vertical">

    <com.zhpan.bannerview.BannerViewPager
        android:id="@+id/bannerVideoVerify"
        android:layout_width="0dp"
        android:layout_height="290dp"
        android:overScrollMode="never"
        app:bvp_auto_play="false"
        app:bvp_can_loop="true"
        app:bvp_indicator_checked_color="@color/colorAccent"
        app:bvp_indicator_gravity="center"
        app:bvp_indicator_normal_color="#FFF6F7F9"
        app:bvp_indicator_slide_mode="normal"
        app:bvp_indicator_style="round_rect"
        app:bvp_interval="1000"
        app:bvp_round_corner="3dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/goVerifyBtn"
        android:layout_width="285dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shape_rectangle_green_25dp"
        android:gravity="center"
        android:text="@string/real_verify"
        android:textColor="#ffffffff"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bannerVideoVerify" />

</androidx.constraintlayout.widget.ConstraintLayout>