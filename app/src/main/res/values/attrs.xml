<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="colorPrimary" format="color" />
    <attr name="colorPrimaryDark" format="color" />
    <attr name="colorAccent" format="color" />
    <attr name="textColorPrimary" format="color" />
    <attr name="viewBackground" format="color" />


    <declare-styleable name="MultipleStatusView">
        <attr name="loadingView" format="reference"/>
        <attr name="errorView" format="reference"/>
        <attr name="emptyView" format="reference"/>
        <attr name="noNetworkView" format="reference"/>
        <attr name="contentView" format="reference"/>
    </declare-styleable>
    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension"/>
        <attr name="civ_border_color" format="color"/>
        <attr name="civ_border_overlay" format="boolean"/>
        <attr name="civ_fill_color" format="color"/>
    </declare-styleable>



    <!--弧度的大小-->
    <attr name="borderRadius" format="dimension"/>
    <!--圆形图片和带有圆角的图片-->
    <attr name="type" format="reference">
        <enum name="circle" value="0"/>
        <enum name="round" value="1"/>
        <enum name="normal" value="2"/>
    </attr>
    <declare-styleable name="roundImageViewAttrs">
        <!--直接引用上面的-->
        <attr name="borderRadius"/>
        <attr name="type"/>
    </declare-styleable>



    <!--频谱-->
    <declare-styleable name="voisePlayingIconAttr">
        <attr name="pointer_color" format="color" />
        <attr name="pointer_num" format="integer" />
        <attr name="pointer_width" format="float" />
        <attr name="pointer_speed" format="integer" />
    </declare-styleable>

</resources>